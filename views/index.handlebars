<h1> Burgers! </h1>

<h2> Burgers that haven't been eaten!</h2>
	
<div class="row">
	<div class="col-md-5">
		<ul>
			{{#each burgers}}
				{{#unless this.devoured}}
					<li class="burgerq">
						{{this.id}}. {{this.burger_name}}

						<br>

						<form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="devoured" value="true">
						<button type="submit" class=" btn btn-default">NOM NOM!!</button>
						</form>

					</li>
				{{/unless}}
			{{/each}}
		</ul>
	</div>

<br>

<h2> Burgers dat been eated! </h2>

	<div class="col-md-5">
		<ul>
			{{#each burgers}}
				{{#if this.devoured}}
					<li class="burgereated">
						{{this.id}}. {{this.burger_name}}
					</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
</div>

<br>

<div class="row">
	<div class="col-md-12 text-center">
		<form class="create-update-form" action="burgers/insertOne" method="POST">
			<div class="form-group">
				<input type="text" name="name">
				<br>
				<button class ="btn btn-default" type="submit">Submit!</button>
			</div>
		</form>
	</div>
</div>


		

